---
import Layout from "@/layouts/Layout.astro";
import "@/styles/globals.css";
import { Button } from "@/components/ui/button";
import { Globe, Twitter, Mail, ArrowRight } from "lucide-react";
import copy from "@/data/copy.json";
import Footer from "@/components/Footer.astro";
---

<Layout>
  <main class="min-h-screen pt-24 flex flex-col">
    <div class="container mx-auto px-6 md:px-8 max-w-6xl pb-16">
      {/* Header */}
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">{copy.about.header.title}</h1>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
          {copy.about.header.description}
        </p>
      </div>

      {/* Mission */}
      <section class="mb-20">
        <div class="bg-muted/30 rounded-lg p-8 md:p-12 border">
          <h2 class="text-2xl font-bold mb-6">{copy.about.mission.title}</h2>
          <div class="space-y-4 text-lg text-muted-foreground">
            <p set:html={copy.about.mission.p1} />
            <p>
              {copy.about.mission.p2}
            </p>
          </div>
        </div>
      </section>

      {/* Story/Values */}
      <section class="grid md:grid-cols-2 gap-12 mb-20">
        <div>
          <h2 class="text-2xl font-bold mb-4">{copy.about.story.title}</h2>
          <p class="text-muted-foreground mb-4">
            {copy.about.story.p1}
          </p>
          <p class="text-muted-foreground">
            {copy.about.story.p2}
          </p>
        </div>
        <div>
          <h2 class="text-2xl font-bold mb-4">{copy.about.values.title}</h2>
          <ul class="space-y-4">
            {copy.about.values.items.map((item) => (
              <li class="flex gap-3">
                <div class="w-2 h-2 mt-2 rounded-full bg-primary flex-shrink-0"></div>
                <div>
                  <strong class="block text-foreground">{item.title}</strong>
                  <span class="text-muted-foreground">{item.description}</span>
                </div>
              </li>
            ))}
          </ul>
        </div>
      </section>

      {/* Connect */}
      <section class="text-center mb-20">
        <h2 class="text-2xl font-bold mb-8">{copy.about.connect.title}</h2>
        <div class="flex justify-center gap-4">
          <a href="https://kerjaremote.net" target="_blank">
            <Button variant="outline" size="lg" className="gap-2">
              <Globe className="w-4 h-4" /> {copy.about.connect.website}
            </Button>
          </a>
          <a href="https://x.com/kerjaremote_net" target="_blank">
            <Button variant="outline" size="lg" className="gap-2">
              <Twitter className="w-4 h-4" /> {copy.about.connect.twitter}
            </Button>
          </a>
          <a href="mailto:hello@kerjaremote.net">
            <Button variant="outline" size="lg" className="gap-2">
              <Mail className="w-4 h-4" /> {copy.about.connect.email}
            </Button>
          </a>
        </div>
      </section>

      {/* CTA Author */}
      <section class="bg-primary text-primary-foreground rounded-lg p-8 md:p-12 text-center">
        <h2 class="text-2xl md:text-3xl font-bold mb-4">{copy.about.ctaAuthor.title}</h2>
        <p class="text-primary-foreground/80 text-lg mb-8 max-w-xl mx-auto">
          {copy.about.ctaAuthor.description}
        </p>
        <Button size="lg" variant="premium" className="gap-2">
          {copy.about.ctaAuthor.button} <ArrowRight className="w-4 h-4" />
        </Button>
      </section>
    </div>

    <Footer />
  </main>
</Layout>
```
