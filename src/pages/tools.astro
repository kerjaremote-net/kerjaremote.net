---
import Search from "@/components/Search";
import Layout from "@/layouts/Layout.astro";
import Footer from "@/components/Footer.astro";
import ListWebsites from "@/components/ListWebsites";
import ListTags from "@/components/ListTags";
import "@/styles/globals.css";
import { cn } from "@/lib/utils";
---

<Layout
  title="Tools & Aplikasi Kerja Remote Terbaik 2024"
  description="Temukan aplikasi dan software kerja remote terbaik untuk meningkatkan produktivitas. Dari manajemen tugas hingga komunikasi tim."
>
  <main class="flex min-h-screen flex-col">
    <section class="container z-10 mx-auto flex max-w-6xl flex-col px-6 pt-24 md:pt-28 md:px-8">
      <div class="flex flex-col gap-8 md:flex-row md:gap-12">
        <div class="w-full flex flex-1 flex-col">
          <h1 class="mb-8 text-3xl md:text-4xl leading-tight">
            Kerja RemoteNetwork<br />
            <span class="font-light text-gray-600 dark:text-gray-300">Anything you need about remote work</span>
          </h1>
          <Search client:load className="w-full max-w-2xl" />
        </div>
        <div class="w-full md:w-[400px] aspect-video rounded-lg border bg-white overflow-hidden">
          <a href="https://aipedia.pro" target="_blank" class="block w-full h-full">
            <div class="relative flex flex-col items-center justify-center h-full bg-gradient-to-br from-gray-50 to-white hover:from-gray-100 hover:to-gray-50 transition-all duration-300">
              <img 
                src="/images/aipedia-ss.png" 
                alt="AIpedia.pro Featured Banner" 
                class="absolute inset-0 w-full h-full object-cover"
              />
            </div>
          </a>
        </div>
      </div>
    </section>
    <section
      class="to-red h-8 bg-gradient-to-b from-white to-muted dark:from-black dark:to-muted"
    >
    </section>
    <section class={cn("flex-1 bg-muted")}>
      <div class="container mx-auto max-w-6xl px-6 md:px-8">
        <ListTags client:load />
      </div>
    </section>
    <section class={cn("flex-1 bg-muted pb-4 md:pb-12")}>
      <div class="container mx-auto max-w-6xl px-6 md:px-8">
        <ListWebsites client:load />
      </div>
    </section>
    <Footer />
  </main>
</Layout>
