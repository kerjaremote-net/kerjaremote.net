---
import Layout from "@/layouts/Layout.astro";
import { Button } from "@/components/ui/button";
import "@/styles/globals.css";
import websites from "@/data/websites.json";
import Footer from "@/components/Footer.astro";
import { Notebook, BookOpen, Bot, Users, ArrowRight, Globe } from "lucide-react";

const featuredTools = websites.slice(0, 6);

const remoteKits = [
  { 
    title: "Remote Prompt Kit", 
    description: "Kumpulan prompt siap pakai untuk kerja remote: komunikasi, manajemen tugas, laporan kerja, dan produktivitas.",
    icon: Notebook,
    link: "/remote-kits"
  },
  { 
    title: "Remote Prompt Guide",
    description: "Panduan lengkap memahami apa itu Remote Prompt Kit, cara memakai, dan bagaimana meningkatkan performa kerja remote.",
    icon: BookOpen,
    link: "/panduan/remote-prompt-guide"
  },
  { 
    title: "Remote Navigator GPT (Free)",
    description: "Custom GPT gratis untuk membantu mencari pekerjaan remote, menulis cover letter, dan optimasi CV.",
    icon: Bot,
    link: "/tools/remote-navigator"
  },
  { 
    title: "Join Community",
    description: "Gabung komunitas KerjaRemote untuk networking, peluang kerja, diskusi industri digital, dan dukungan karier.",
    icon: Users,
    link: "/community"
  },
];

const panduan = [
  { title: "How to start remote work", category: "Career", image: "https://placehold.co/600x400" },
  { title: "Best tools for 2024", category: "Tools", image: "https://placehold.co/600x400" },
  { title: "Managing time zones", category: "Productivity", image: "https://placehold.co/600x400" },
  { title: "Remote taxes 101", category: "Finance", image: "https://placehold.co/600x400" },
];
---

<Layout>
  <main class="flex min-h-screen flex-col pt-16">
    {/* Hero */}
    <section class="container mx-auto px-6 md:px-8 max-w-6xl py-12 md:py-20 lg:py-24">
      <div class="grid gap-12 lg:grid-cols-2 lg:gap-8 items-center">
        <div class="flex flex-col items-start gap-6">
          <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl leading-tight">
            Upgrade Your <br/>
            <span class="text-primary">Remote Setup</span>
          </h1>
          <p class="text-lg text-muted-foreground max-w-xl">
            Discover the best tools, panduan, and equipment to make your remote work journey successful and comfortable.
          </p>
          <div class="flex gap-4">
            <a href="/remote-kits">
              <Button size="lg" variant="premium" className="gap-2">
                Mulai dengan Remote Kits <ArrowRight className="w-4 h-4" />
              </Button>
            </a>
          </div>
        </div>
        <div class="relative aspect-video rounded-xl overflow-hidden bg-muted">
             {/* Placeholder for /mnt/data/Screenshot 2025-11-22 at 23.35.35.png */}
             <div class="absolute inset-0 flex items-center justify-center bg-gray-100 text-gray-400">
                <span class="text-sm">Promo Banner Image</span>
             </div>
        </div>
      </div>
    </section>

    <section class="text-white">
      <div class="container mx-auto px-6 md:px-8 max-w-6xl">
        <!-- black box -->
        <div class="rounded-2xl p-8 card-gradient">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
            {remoteKits.map((kit) => (
              <div class="flex flex-col items-start group">
                <div class="mb-6 p-3 bg-white/10 rounded-xl group-hover:bg-white/20 transition-colors">
                  <kit.icon className="w-8 h-8" />
                </div>
                <h3 class="text-xl font-bold mb-3">{kit.title}</h3>
                <p class="text-white/70 mb-8 leading-relaxed text-sm">
                  {kit.description}
                </p>
                <a href={kit.link}>
                  <Button variant="premium-white" className="px-6 font-bold mt-auto">
                    Explore {">"}
                  </Button>
                </a>
              </div>
            ))}
          </div>

        </div>
        <!-- end black box -->
      </div>
    </section>

    {/* panduan */}
    <section class="py-16">
        <div class="container mx-auto px-6 md:px-8 max-w-6xl">
            <div class="flex items-center justify-between mb-8">
                <h2 class="text-2xl font-bold">panduan & Resources</h2>
                <a href="/panduan" class="text-primary hover:underline flex items-center gap-1">
                    Read more <ArrowRight className="w-4 h-4" />
                </a>
            </div>
            
            <div class="grid gap-8 lg:grid-cols-3">
                {/* Featured Guide */}
                <div class="lg:col-span-2 relative overflow-hidden rounded-xl bg-muted aspect-video lg:aspect-auto group border">
                    <img src="https://placehold.co/800x600" alt="Featured" class="absolute inset-0 w-full h-full object-cover transition-transform group-hover:scale-105" />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent flex flex-col justify-end p-8 text-white">
                        <span class="bg-primary text-primary-foreground px-3 py-1 rounded-full text-xs font-medium w-fit mb-4">Featured</span>
                        <h3 class="text-3xl font-bold mb-2">The Ultimate Guide to Remote Work in 2025</h3>
                        <p class="text-gray-200 line-clamp-2">Everything you need to know about taxes, visas, and finding the perfect job.</p>
                    </div>
                </div>

                {/* Guide Cards */}
                <div class="flex flex-col gap-6">
                    {panduan.slice(0, 3).map(guide => (
                        <div class="flex gap-4 items-center group cursor-pointer">
                            <div class="w-24 h-24 rounded-lg bg-muted overflow-hidden flex-shrink-0">
                                <img src={guide.image} alt={guide.title} class="w-full h-full object-cover" />
                            </div>
                            <div>
                                <span class="text-xs font-medium text-primary">{guide.category}</span>
                                <h4 class="font-semibold group-hover:text-primary transition-colors">{guide.title}</h4>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </section>

    {/* Tools Preview */}
    <section class="bg-muted/30 py-16">
        <div class="container mx-auto px-6 md:px-8 max-w-6xl">
             <div class="flex items-center justify-between mb-8">
                <h2 class="text-2xl font-bold">Popular Tools</h2>
                <a href="/tools" class="text-primary hover:underline flex items-center gap-1">
                    Browse all tools <ArrowRight className="w-4 h-4" />
                </a>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                {featuredTools.map((tool) => (
                    <a href={tool.url} target="_blank" class="block group">
                        <div class="bg-white rounded-lg p-4 shadow-sm hover:shadow-md transition-all border h-full flex flex-col shadow-2">
                            <div class="flex items-start gap-4 mb-3">
                                <div class="w-12 h-12 rounded-lg bg-muted overflow-hidden flex-shrink-0">
                                    <img src={tool.favicon || "https://placehold.co/100"} alt={tool.title} class="w-full h-full object-cover" />
                                </div>
                                <div>
                                    <h3 class="font-semibold line-clamp-1 group-hover:text-primary transition-colors">{tool.title}</h3>
                                    <div class="flex flex-wrap gap-1 mt-1">
                                        {tool.tags.slice(0, 2).map(tag => (
                                            <span class="text-[10px] bg-secondary px-1.5 py-0.5 rounded text-secondary-foreground">{tag}</span>
                                        ))}
                                    </div>
                                </div>
                            </div>
                            <p class="text-sm text-muted-foreground line-clamp-2">{tool.description}</p>
                        </div>
                    </a>
                ))}
            </div>
        </div>
    </section>

    {/* Footer Reuse */}
    <Footer />
  </main>
</Layout>

