---
import Layout from "@/layouts/Layout.astro";
import "@/styles/globals.css";
import { Button } from "@/components/ui/button";
import { Check, ArrowRight, Star, Zap, FileText, MessageSquare, Globe } from "lucide-react";
import copy from "@/data/copy.json";
import Footer from "@/components/Footer.astro";

const features = copy.remoteKits.whatsInside.features.map((f, i) => ({
  ...f,
  icon: [Zap, MessageSquare, FileText][i]
}));

const testimonials = copy.remoteKits.testimonials.items.map(t => ({
  ...t,
  avatar: "https://placehold.co/100"
}));

const pricing = copy.remoteKits.pricing.plans.map((p, i) => ({
  ...p,
  popular: i === 1
}));

const faqs = copy.remoteKits.faq.items;
---

<Layout>
  <main class="min-h-screen pt-16 flex flex-col">
    {/* Hero Section */}
    <section class="container mx-auto px-6 md:px-8 max-w-6xl py-20 md:py-32 text-center">
      <span class="bg-primary/10 text-primary px-4 py-1.5 rounded-full text-sm font-medium mb-6 inline-block">
        {copy.remoteKits.hero.badge}
      </span>
      <h1 class="text-4xl md:text-6xl font-bold leading-tight mb-6">
        {copy.remoteKits.hero.title} <span class="text-primary">{copy.remoteKits.hero.titleHighlight}</span>
      </h1>
      <p class="text-xl text-muted-foreground mb-10 max-w-2xl mx-auto">
        {copy.remoteKits.hero.description}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button size="lg" className="gap-2 bg-[linear-gradient(180deg,#454545_0%,#000000_50%,#454545_100%)] text-white hover:opacity-90 border-none btn-3d-black rounded-xl">
          {copy.remoteKits.hero.ctaPrimary} <ArrowRight className="w-4 h-4" />
        </Button>
        <Button size="lg" className="px-6 font-bold mt-auto bg-[linear-gradient(180deg,#ffffff_0%,#d4d4d4_50%,#ffffff_100%)] text-black hover:opacity-90 border-none btn-3d-white rounded-xl">
          {copy.remoteKits.hero.ctaSecondary}
        </Button>
      </div>
    </section>

    {/* What's Inside */}
    <section class="bg-muted/30 py-20">
      <div class="container mx-auto px-6 md:px-8 max-w-6xl">
        <h2 class="text-3xl font-bold text-center mb-16">{copy.remoteKits.whatsInside.title}</h2>
        <div class="grid md:grid-cols-3 gap-8">
          {features.map((feature) => (
            <div class="bg-background p-8 rounded-lg border shadow-sm hover:shadow-md transition-all">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center text-primary mb-6">
                <feature.icon className="w-6 h-6" />
              </div>
              <h3 class="text-xl font-bold mb-3">{feature.title}</h3>
              <p class="text-muted-foreground">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Testimonials */}
    <section class="py-20">
      <div class="container mx-auto px-6 md:px-8 max-w-6xl">
        <h2 class="text-3xl font-bold text-center mb-16">{copy.remoteKits.testimonials.title}</h2>
        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          {testimonials.map((t) => (
            <div class="bg-muted/30 p-8 rounded-lg border">
              <div class="flex gap-1 text-yellow-500 mb-4">
                {[1,2,3,4,5].map(() => <Star className="w-4 h-4 fill-current" />)}
              </div>
              <p class="text-lg mb-6">"{t.content}"</p>
              <div class="flex items-center gap-4">
                <img src={t.avatar} alt={t.name} class="w-12 h-12 rounded-full" />
                <div>
                  <div class="font-bold">{t.name}</div>
                  <div class="text-sm text-muted-foreground">{t.role}</div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Pricing */}
    <section class="bg-muted/30 py-20" id="pricing">
      <div class="container mx-auto px-6 md:px-8 max-w-6xl">
        <h2 class="text-3xl font-bold text-center mb-6">{copy.remoteKits.pricing.title}</h2>
        <p class="text-center text-muted-foreground mb-16 max-w-xl mx-auto">
          {copy.remoteKits.pricing.description}
        </p>
        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          {pricing.map((plan) => (
            <div class={`relative bg-background rounded-lg border p-8 flex flex-col ${plan.popular ? 'border-primary shadow-lg ring-1 ring-primary' : 'shadow-sm'}`}>
              {plan.popular && (
                <div class="absolute -top-4 left-1/2 -translate-x-1/2 bg-primary text-primary-foreground px-4 py-1 rounded-full text-sm font-medium">
                  Most Popular
                </div>
              )}
              <div class="mb-8">
                <h3 class="text-2xl font-bold mb-2">{plan.name}</h3>
                <p class="text-muted-foreground mb-6">{plan.description}</p>
                <div class="text-4xl font-bold">{plan.price}</div>
              </div>
              <ul class="space-y-4 mb-8 flex-1">
                {plan.features.map((feature) => (
                  <li class="flex items-center gap-3">
                    <Check className="w-5 h-5 text-primary flex-shrink-0" />
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
              <Button size="lg" variant={plan.popular ? "default" : "outline"} className="w-full">
                {plan.cta}
              </Button>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* FAQ */}
    <section class="py-20">
      <div class="container mx-auto px-6 md:px-8 max-w-3xl">
        <h2 class="text-3xl font-bold text-center mb-12">{copy.remoteKits.faq.title}</h2>
        <div class="space-y-6">
          {faqs.map((faq) => (
            <div class="border rounded-lg p-6">
              <h3 class="font-bold text-lg mb-2">{faq.q}</h3>
              <p class="text-muted-foreground">{faq.a}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Final CTA */}
    <section class="py-20 bg-primary text-primary-foreground text-center">
      <div class="container mx-auto px-6 md:px-8 max-w-6xl">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">{copy.remoteKits.finalCta.title}</h2>
        <p class="text-primary-foreground/80 text-lg mb-10 max-w-2xl mx-auto">
          {copy.remoteKits.finalCta.description}
        </p>
        <Button size="lg" variant="secondary" className="gap-2">
          {copy.remoteKits.finalCta.button} <ArrowRight className="w-4 h-4" />
        </Button>
      </div>
    </section>

    <Footer />
  </main>
</Layout>
```
